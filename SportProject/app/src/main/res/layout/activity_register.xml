<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activities.RegisterActivity">

    <!-- CardView to contain the registration form, providing a raised effect -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:background="@drawable/card_background"
        android:elevation="8dp"
        android:padding="16dp">

        <!-- ScrollView to make the content scrollable if it exceeds the screen height -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- LinearLayout to hold all form elements in a vertical arrangement -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Username input field -->
                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Username"
                    android:inputType="text"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/edit_text_background"/>

                <!-- Password input field -->
                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/edit_text_background"/>

                <!-- Age input field -->
                <EditText
                    android:id="@+id/etAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Age"
                    android:inputType="number"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/edit_text_background"/>

                <!-- Gender label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Gender"
                    android:textSize="18sp"
                    android:paddingTop="8dp" />

                <!-- Gender spinner for selection -->
                <Spinner
                    android:id="@+id/spGender"
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Biography input field -->
                <EditText
                    android:id="@+id/etBiography"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Biography"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/edit_text_background"/>

                <!-- Basketball Level label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Basketball Level (1-5)"
                    android:textSize="18sp"
                    android:paddingTop="8dp" />

                <!-- Basketball Level spinner for selection -->
                <Spinner
                    android:id="@+id/spBasketballLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Football Level label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Football Level (1-5)"
                    android:textSize="18sp"
                    android:paddingTop="8dp" />

                <!-- Football Level spinner for selection -->
                <Spinner
                    android:id="@+id/spFootballLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Volleyball Level label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Volleyball Level (1-5)"
                    android:textSize="18sp"
                    android:paddingTop="8dp" />

                <!-- Volleyball Level spinner for selection -->
                <Spinner
                    android:id="@+id/spVolleyballLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Padel Level label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Padel Level (1-5)"
                    android:textSize="18sp"
                    android:paddingTop="8dp" />

                <!-- Padel Level spinner for selection -->
                <Spinner
                    android:id="@+id/spPadelLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Register button -->
                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:text="Register"
                    android:textColor="@android:color/white"/>

                <!-- Back to Login button -->
                <Button
                    android:id="@+id/btnBackToLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:text="Back to Login"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
